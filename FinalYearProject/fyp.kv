ScreenManagement:
    TitlePage:
    MainPage:
    LoginPage:
    RegisterPage:
    ClassroomPage:
    ProfilePage:
    ProgressPage:
    PlayPage:

<TitlePage>:
    name: "title"
    GridLayout:
        cols:1
        Label:
            text: "Primary Mathletes"
        GridLayout:
            cols: 1
            Button:
                text: "Register"
                on_release: app.root.current = "register"
            Button:
                text: "Login"
                on_release: app.root.current = "login"

<LoginPage>:
    name: "login"
    GridLayout:
        cols:1
        Label:
            text: "Login Page"
        GridLayout:
            cols:1
            Label:
                text: 'Username'
            TextInput:
                id: usernameLogin
                text: root.username
            Label:
                text: 'Password'
            TextInput:
                id: passwordLogin
                text: root.password
                password: True
            Button:
                text: "Login"
                on_release: root.checkLogin(usernameLogin.text, passwordLogin.text)
            Button:
                text: "Click here to Register"
                on_release: app.root.current = "register"


<RegisterPage>:
    name: "register"
    GridLayout:
        cols:1
        Label:
            text: "Register Page"
        GridLayout:
            cols:1
            Label
                text: "username"
            TextInput:
                id: usernameRegister
            Label
                text: "email"
            TextInput:
                id: emailRegister
            Label
                text: "password"
            TextInput:
                id: passwordRegister
                password: True
            Button:
                text: "Register"
                on_release: root.checkPassword(usernameRegister.text, emailRegister.text, passwordRegister.text)
            Button:
                text: "Click here to Login"
                on_release: app.root.current = "login"


<MainPage>:
    name: 'main'
    GridLayout:
        cols: 1
        Label:
            text: 'Home Page'
        GridLayout:
            cols: 1
            Button:
                id: playButton
                text: "Play"
                on_release: app.root.current = "play"
            Button:
                id: classroomButton
                text: 'Classroom'
                on_release: app.root.current = "classroom"
            Button:
                id: viewProfileButton
                text: "View Profile"
                on_release: app.root.current = "profile"
            Button:
                id: ViewProgressButton
                text: "View Progress"
                on_release: app.root.current = "progress"

<ProgressPage>:
    name: "progress"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size
	Label:
	    text: "This is where the progress page will be"

<ProfilePage>:
    name: "profile"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size
	Label:
	    text: "This is where the profile will be"


<PlayPage>:
    name: "play"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size
	Label:
	    text: "This is where the minigames will be"

<ClassroomPage>:
    name: "classroom"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size
	GridLayout:
	    cols: 1
        GridLayout:
	        cols: 3
	        Label:
	            text: ""
	        Label:
	            text: ""
	        Label:
	            text: ""
	    GridLayout:
	        cols: 3
	        Label:
	            text: ""
	        Button:
	            text: "Join Classroom"
	            on_release: root.joinClassroom()
	        Label:
	            text: ""
	    Label:
	        text: ""
	    GridLayout:
	        cols: 3
	        Label:
	            text: ""
	        Button:
	            text: "Create Classroom"
	            on_release: root.createClassroom()
	        Label:
	            text: ""
	    GridLayout:
	        cols: 3
	        Label:
	            text: ""
	        Label:
	            text: ""
	        Label:
	            text: ""

<JoinClassroomPopup>:
    Label:
        text: root.joinClassroomPopupText
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top": 1}

    Button:
        name: "joinclassroom"
        text: "Button"
        on_release: root.joinClassroomButton()
        size_hint: 0.8, 0.2
        pos_hint: {"x": 0.1, "y": 0.1}

<CreateClassroomPopup>:
    Label:
        text: root.createClassroomPopupText
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top": 1}

    Button:
        name: "createclassroom"
        text: "Button"
        on_release: root.createClassroomButton()
        size_hint: 0.8, 0.2
        pos_hint: {"x": 0.1, "y": 0.1}