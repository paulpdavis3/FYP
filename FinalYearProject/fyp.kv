ScreenManagement:
    TitlePage:
    MainPage:
    LoginPage:
    RegisterPage:
    StudentClassroomPage:
    TeacherClassroomPage:
    ProfilePage:
    ProgressPage:
    PlayPage:
    AdditionPage:
    SubtractionPage:
    MultiplicationPage:
    DivisionPage:

<TitlePage>:
    name: "title"
    GridLayout:
        cols:1
        Label:
            text: "Primary Mathletes"
        GridLayout:
            cols: 1
            Button:
                text: "Register"
                on_release: app.root.current = "register"
            Button:
                text: "Login"
                on_release: app.root.current = "login"

<LoginPage>:
    name: "login"
    GridLayout:
        cols:1
        Label:
            text: "Login Page"
        GridLayout:
            cols:1
            Label:
                text: 'Username'
            TextInput:
                id: usernameLogin
                text: root.username
            Label:
                text: 'Password'
            TextInput:
                id: passwordLogin
                text: root.password
                password: True
            Button:
                text: "Login"
                on_release: root.checkLogin(usernameLogin.text, passwordLogin.text)
            Button:
                text: "Click here to Register"
                on_release: app.root.current = "register"


<RegisterPage>:
    name: "register"
    GridLayout:
        cols:1
        Label:
            text: "Register Page"
        GridLayout:
            cols:1
            Label
                text: "username"
            TextInput:
                id: usernameRegister
            Label
                text: "email"
            TextInput:
                id: emailRegister
            Label
                text: "password"
            TextInput:
                id: passwordRegister
                password: True
            Button:
                text: "Register"
                on_release: root.checkPassword(usernameRegister.text, emailRegister.text, passwordRegister.text)
            Button:
                text: "Click here to Login"
                on_release: app.root.current = "login"


<MainPage>:
    name: 'main'
    GridLayout:
        cols: 1
        Label:
            text: 'Home Page'
        GridLayout:
            cols: 1
            Button:
                id: playButton
                text: "Play"
                on_release: app.root.current = "play"
            Button:
                id: classroomButton
                text: 'Classroom'
                on_release: root.goToClassroom()
            Button:
                id: viewProfileButton
                text: "View Profile"
                on_release: app.root.current = "profile"
            Button:
                id: ViewProgressButton
                text: "View Progress"
                on_release: app.root.current = "progress"

<ProgressPage>:
    name: "progress"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size
	Label:
	    text: "This is where the progress page will be"

<ProfilePage>:
    name: "profile"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size
	Label:
	    text: "This is where the profile will be"


<PlayPage>:
    name: "play"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size

    Button:
        size_hint: 0.75, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.825}
        on_release: app.root.current = "addition"
        text: "Addition"
    Button:
        size_hint: 0.75, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_release: app.root.current = "subtraction"
        text: "Subtraction"
    Button:
        size_hint: 0.75, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.375}
        on_release: app.root.current = "multiplication"
        text: "Multiplication"
    Button:
        size_hint: 0.75, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        on_release: app.root.current = "division"
        text: "Division"

<StudentClassroomPage>:
    name: "studentclassroom"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size

    GridLayout:
        cols: 1
        Label
            size_hint: 0.8, 0.2
            font_size: root.width/10
            text: "Student"
        Label
            size_hint: 0.8, 0.2
            text: root.classroom
        TextInput:
            id: classroomInput
            font_size: classroomInput.height / 1.2
            size_hint: 0.8, 0.2
            disabled: False if root.classroom == "no" else True
        Button:
            size_hint: 0.8, 0.2
            text: "Join Classroom"
            on_release: root.joinClassroom(classroomInput.text)
            disabled: False if root.classroom == "no" else True
        Button:
            size_hint: 0.8, 0.2
            text: "Delete"
            on_release: root.deleteClassroom()
            disabled: True if root.classroom == "no" else False


<TeacherClassroomPage>:
    name: "teacherclassroom"
    Button:
		on_release: app.root.current = "main"
		size_hint: 0.1, 0.1
	    pos_hint: {"left": 1, 'top':1}
        Image:
	        source: "back.png"
	        y: self.parent.y
            x: self.parent.x
            size: self.parent.size

    Label:
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        size_hint: 0.2, 0.2
        font_size: root.width/10
        text: "Student"

    Label:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.2, 0.2
        font_size: root.width/10
        text: "student"

